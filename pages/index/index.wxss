.navSwiper {
  width:100%;
  height:300rpx;
}
.navSwiper image{
  width:100%;
  height:300rpx;
}

/* 导航 */
.navContainer {
  display: flex;
  justify-content: space-around;
  margin-top:20rpx;
}
.navContainer .navItem {
  display: flex;
  flex-direction: column;
}
.navContainer .navItem .iconfont{
  width:100rpx;
  height:100rpx;
  line-height: 100rpx;
  text-align: center;
  border-radius: 50rpx;
  background:#d43c33;
  color:#fff;
  font-size:50rpx;
}
.navContainer .navItem text{
  margin-top:20rpx;
  font-size:26rpx;
  text-align: center;
}
/* 推荐歌曲 */
.recommendContainer,.topContainer{
  padding:20rpx;
}


.scrollContainer{
  margin-top:20rpx;
  display: flex;
  height:300rpx;
}
.scrollContainer .scrollItem {
   margin-right: 20rpx;
}
.scrollContainer .scrollItem text{
  overflow: hidden;
  font-size:26rpx;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.scrollContainer .scrollItem image{
  width:200rpx;
  height:200rpx;
  border-radius: 10rpx;
}
.topSwiper{
  height:460rpx;
  margin-top:20rpx;
}
.topSwiper .topContent{
  width:96%;
  background:#fbfbfb;
}
.topSwiper .title{
  font-size:28rpx;
  line-height: 80rpx;
}
.topSwiper .desc{
  display: flex;
}
.topSwiper .desc image{
  width:100rpx;
  height:100rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}
.topSwiper .desc text{
  flex:1;
  line-height: 100rpx;
  height:100rpx;
  margin-left:20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}