<view class="songContainer">
  <view class="class">123</view>
  <view class="dong"></view>
  <image class="needle needleRotates" src="/static/images/song/needle.png"></image>
  <view class="discContainer discRotates">
    <image class="disc" src="/static/images/song/disc.png"></image>
    <image class="musicImg" src="/static/images/nvsheng.jpg"></image>
  </view>



  <!-- 进度条区域 -->
  <view class="audioControl">
    <text>00:00</text>
    <!-- 进度条总长度 -->
    <view class="barControl">
      <!-- 实时进度条-->
      <view class="audio-current-time" style='width: 100rpx;'>
        <view class="audio-progress">

        </view>
      </view>
    </view>
    <text>00:00</text>
  </view>



  <!-- 底部播放选项区域 -->
  <view class="musicControl">
    <text class="iconfont icon-iconsMusicyemianbofangmoshiRepeat" ></text>
    <text class="iconfont icon-prev" id="pre"></text>
    <text class="iconfont {{isPlay?'icon-zanting': 'icon-bofang'}} big" ></text>
    <text class="iconfont icon-xiayishouxianxing" id="next"></text>
    <text class="iconfont icon-iconsMusicyemianbofangmoshiPlayList"></text>
  </view>
</view>
