.videoContainer{
  padding:10rpx;
}
.videoContainer .header{
  display: flex;
}
.videoContainer .header input{
  flex:1;
  border:1rpx solid #eee;
  height:60rpx;
  margin:0 10rpx;
  padding:0 10rpx;
}
.videoContainer .header input .search{
  color:#d43c33;
}
.videoContainer .header image{
  width:60rpx;
  height:60rpx;
}

/* 视频标签导航 */
.tagScroll {
  display: flex;
  /* 文字在flex当中需要不允许换行 */
  white-space: nowrap;
  height:62rpx;
  font-size: 30rpx;
  margin:20rpx 0;
}
.tagScroll view{
  margin:0 10rpx;
}
.tagScroll view.active{
  border-bottom: 1rpx solid #d43c33;
}
/* 视频列表 */
.videoScoll{
  margin-top:20rpx;
  height: calc(100vh - 160rpx);
    
}
.videoScoll .videoItem .content{
  height:80rpx;
  line-height: 80rpx;
  font-size:26rpx;
  border-bottom: 1rpx solid #ccc;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.videoScoll .videoItem .conver{
   width:100%;
   height:360rpx;
   border-radius: 10rpx;
}
.videoScoll .videoItem .footer{
  display: flex;
  margin:20rpx 0;
  height:60rpx;
  line-height: 60rpx;
}
.videoScoll .videoItem .footer .nickname{
  flex:1;
  font-size:26rpx;
  padding-left:20rpx;
}
.videoScoll .videoItem .footer .avatar{
  width:60rpx;
  height:60rpx;
  border-radius: 30rpx;
}
.videoItem .footer .iconfont{
  margin-left:50rpx;
  font-size: 40rpx;
  position: relative;
}
.videoItem .footer .iconfont text{
  position: absolute;
  top:-30rpx;
  font-size:20rpx;
}
.videoItem .footer button{
  display: inline;
  padding:0;
  background:none;
}
